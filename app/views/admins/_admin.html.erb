<div id="<%= dom_id admin %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Full name:</strong>
    <%= admin.full_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= admin.email %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this admin", admin, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this admin', edit_admin_path(admin), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

<% if current_user %>
<div class="flex-none w-[15%]">
  <div class="sticky top-0 bg-gray-100 min-h-screen">
    <ul class="flex sm:flex-col overflow-hidden content-center justify-items-center pt-6 pl-2 leading-8">
      <% if current_user.instance_of?(Client) %>     
        <%= render "layouts/client_sidebar" %>
      <% elsif current_user.instance_of?(Maid) %>
        <%= render "layouts/maid_sidebar" %>
      <% else %>
        <%= render "layouts/admin_sidebar" %>
      <% end %>
    </ul>
  </div>
</div> 
<% end %>

<div class="mx-auto md:w-2/3">
  <h1 class="font-bold text-4xl">Leave a review</h1>
  <%= form_with(model: [@maid, @review], class: "contents") do |form| %>
    <%= render "shared/errors", obj: @review %>
    
    <div class="my-5">
      <%= form.label :stars %>
      <%= form.select :stars, Review::STARS, class: "block rounded-lg border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :comment, "Feedback" %>
      <%= form.text_area :comment, rows: 7, class: "block rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>

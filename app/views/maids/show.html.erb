<section class="mx-auto md:w-[90%]">
  <%= render "shared/notice" %>
  
  <div class="border rounded-lg bg-white border-gray-200 mt-4 p-8 w-full flex flex-col sm:flex-row flex-wrap sm:flex-nowrap flex-grow justify-items-center align-items-center center">
    <div class="w-fixed flex-none flex-grow-0 px-4 text-center">
      <%= image_tag("maid_ph.jpg", class: "w-[208px] h-auto aspect-[4/5] object-top object-cover rounded-lg border-1 shadow-box-shadow") %>
      <p class="mt-6 flex items-baseline justify-center gap-x-2">
      <span class="text-4xl font-bold tracking-tight text-gray-900"><%= @maid.hourly_rate %><span>
      <span class="text-lg font-semibold leading-6 tracking-wider text-gray-600">USD/hr</span>
      </p>
      <% if current_user.instance_of?(Client) %>
      <div class="my-6 block justify-center">
        <%= link_to "HIRE ME", new_order_path(maid_id: @maid.id), class: "px-8 py-4 mt-4 bg-green-800 rounded text-white font-bold block text-center tracking-wider" %> 
      </div>
      <hr>

      <div class="mt-4 text-sm">
        Have a problem? <%= link_to "Report maid", new_complaint_path(@maid), class: "underline text-indigo-600 text-sm" %>
      </div>
      <% end %>
          
      <% if current_user_admin? %> 
        <%= link_to "Block Account", block_maid_path(@maid), class: "px-2 py-2 mt-4 bg-red-500 rounded text-white font-medium block text-center" %> 
      <% end %>

    </div>
    <div class="w-full grow space-y-4 px-3 leading-7 font-light">
      <div class="flex justify-between items-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 mb-4"><%= @maid.name %></h2>
        <% if current_user?(@maid) %>
          <%= link_to "Edit Profile", user_path, class: "px-3 py-2 bg-softBlue text-white font-bold rounded items-center" %>
        <% end %>
      </div>
      <span class="text-2xl flex items-center text-center text-middle">
        <%= render "shared/stars", percent: @maid.average_stars_as_percent %> 
        
        <span class="pl-2 text-gray-700 tracking-tight items-center mb-2 text-base">
          <span class="text-lg tracking-wide text-gray-900"><%= @maid.average_stars.round(2) %>/5.0</span>
          (<%= pluralize(@maid.reviews.size, "review") %>)
        </span>
      </span>
      <h3 class="tracking-normal flex items-center">
        <span class="mr-0.5">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
        </span>
        <span class="tracking-tight font-medium"><%= @maid.city %>, <%= @maid.state %></span>
      </h3>
      <p class="text-lg text-gray-700 leading-8 text-justify"><%= @maid.about %></p>
      <p>
        <span class="text-xl font-medium tracking-tight text-gray-700">Skills:</span>
        <span class="text-gray-600 text-lg tracking-tight">Cleaning, Washing</span>
      </p>

      <hr>
      <h2 class="text-2xl font-bold tracking-tight text-gray-800 mb-4">Reviews</h2>
      <% if @maid.reviews.present? %>
      <ul>
        <% @maid.reviews.each do |review| %>
          <li class="my-5">
            <div class="flex justify-between">
              <span class="flex"><%= render "shared/stars", percent: review.stars_as_percent %>
                <span class="pl-2 text-gray-600"><%= review.stars.to_f %></span>
              </span>
              <p class="text-sm fond-bold">$150.00 USD</p>
            </div>
            <p><%= review.comment %></p>
            <h3 class="text-gray-600"><%= review.client.first_name.capitalize %> <%= review.client.last_name.capitalize[0] %>.
              <%= review.client.email %> &bull; <%= time_ago_in_words(review.created_at) %> ago
            </h3>
          </li>
          <hr>
        <% end %>
      </ul>
      <% else %>
        <p>There are no reviews.</p> 
      <% end %>

    </div>
  </div>

